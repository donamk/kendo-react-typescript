{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es5",
      "dom",
      "dom.iterable",
      "esnext",
      "es2019"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react",
    "sourceMap": true,
    "noImplicitAny": false,
    "outDir": "./dist/"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
